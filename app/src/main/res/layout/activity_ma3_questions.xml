<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question1"
        android:id="@+id/txtvQuestion1"
        android:textAlignment="center"
        android:textSize="40dp"
        android:onClick="Question1"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question2"
        android:id="@+id/txtvQuestion2"
        android:textAlignment="center"
        android:textSize="40dp"
        android:onClick="Question2"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtvQuestion1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question3"
        android:id="@+id/txtvQuestion3"
        android:textAlignment="center"
        android:textSize="40dp"
        android:onClick="Question3"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtvQuestion2"
        android:layout_alignParentLeft="true" />
</RelativeLayout>