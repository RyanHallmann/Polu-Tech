<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="900dp"
        android:id="@+id/imvSky"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0080f8" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:id="@+id/imvCloud1"
        android:background="#ffffff"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imvNature"
        android:layout_toEndOf="@+id/imvNature" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:id="@+id/imvCloud2"
        android:background="#ffffff"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imvCloud1"
        android:layout_toLeftOf="@+id/imvNature"
        android:layout_toStartOf="@+id/imvNature" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/imvLand"
        android:background="#00ed0c"
        android:layout_alignTop="@+id/imvCompany"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/imvCompany"
        android:background="#919191"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:id="@+id/imvNature"
        android:background="#8e4200"
        android:layout_alignBottom="@+id/imvCompany"
        android:layout_toRightOf="@+id/imvCompany"
        android:layout_toEndOf="@+id/imvCompany"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:id="@+id/imvOcean"
        android:background="#000e8e"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_alignBottom="@+id/imvLand"
        android:layout_toRightOf="@+id/imvNature"
        android:layout_alignTop="@+id/imvLand"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>